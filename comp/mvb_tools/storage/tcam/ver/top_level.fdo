set FIRMWARE_BASE         "../../../../.."

set DUT_BASE              ".."
set DUT_VER_BASE          "."

set TB_FILE               "$FIRMWARE_BASE/comp/base/mem/tcam2/ver/tbench/testbench.sv"
set SIG_FILE              "./signals_sig.fdo"

lappend COMPONENTS [list "DUT"     $DUT_BASE     "FULL" ]
lappend COMPONENTS [list "DUT_VER" $DUT_VER_BASE "FULL" ]

set SIM_FLAGS(CODE_COVERAGE) false
set SIM_FLAGS(DEBUG)         false

# Global include file for compilation
source "$FIRMWARE_BASE/build/Modelsim.inc.fdo"

# Suppress warnings from arithm library
puts "Std Arith Warnings - Disabled"
set StdArithNoWarnings   1
set NumericStdNoWarnings 1
